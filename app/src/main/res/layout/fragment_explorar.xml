<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Tarjeta: Libros digitales (deshabilitada) -->
    <LinearLayout
        android:id="@+id/cardLibros"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bg_card"
        android:enabled="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvLibrosTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/explorar_libros_digitales"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnExplorarLibros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_explorar_libros"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

    <!-- Tarjeta: Bibliotecas cerca (navega a pantalla de mapa) -->
    <LinearLayout
        android:id="@+id/cardBiblios"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bg_card"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/cardLibros"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvBibliosTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/explorar_bibliotecas_cerca"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnBuscarBiblios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buscar_ahora"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
