<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Título -->
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/perfil_usuario"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Avatar -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgAvatar"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_avatar_gradient"
            android:src="@drawable/ic_account_user"
            android:contentDescription="@string/perfil_usuario"
            android:scaleType="centerInside"
            app:layout_constraintTop_toBottomOf="@id/tvTitulo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Columna izquierda: etiquetas -->
        <LinearLayout
            android:id="@+id/colIzq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/imgAvatar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/colDer">

            <TextView style="@style/ItemEtiqueta" android:text="@string/info_label" />
            <TextView style="@style/ItemEtiqueta" android:text="@string/nombres_label" />
            <TextView style="@style/ItemEtiqueta" android:text="@string/email_label" />
            <TextView style="@style/ItemEtiqueta" android:text="@string/fecha_nac_label" />
            <TextView style="@style/ItemEtiqueta" android:text="@string/miembro_desde_label" />
            <TextView style="@style/ItemEtiqueta" android:text="@string/telefono_label" />
            <TextView style="@style/ItemEtiqueta" android:text="@string/estado_cuenta_label" />
        </LinearLayout>

        <!-- Columna derecha: valores (placeholders reemplazables desde Kotlin) -->
        <LinearLayout
            android:id="@+id/colDer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/imgAvatar"
            app:layout_constraintStart_toEndOf="@id/colIzq"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView style="@style/ItemValor" android:text="@string/placeholder_vacio" />
            <TextView
                android:id="@+id/tvNombre"
                style="@style/ItemValor"
                android:text="@string/placeholder_nombre_completo" />
            <TextView
                android:id="@+id/tvEmail"
                style="@style/ItemValor"
                android:text="@string/placeholder_email_demo" />
            <TextView
                android:id="@+id/tvFechaNac"
                style="@style/ItemValor"
                android:text="@string/placeholder_fecha" />
            <TextView
                android:id="@+id/tvMiembroDesde"
                style="@style/ItemValor"
                android:text="@string/placeholder_fecha" />
            <TextView
                android:id="@+id/tvTelefono"
                style="@style/ItemValor"
                android:text="@string/placeholder_telefono" />
            <TextView
                android:id="@+id/tvEstado"
                style="@style/ItemValor"
                android:text="@string/no_verificado" />
        </LinearLayout>

        <!-- Separador -->
        <View
            android:id="@+id/separador"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="#22000000"
            app:layout_constraintTop_toBottomOf="@id/colDer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Opciones -->
        <TextView
            android:id="@+id/tvOpciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/opciones_label"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/separador"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- EDITAR PERFIL -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEditarPerfil"
            style="@style/Widget.Material3.Button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:text="@string/editar_perfil"
            android:textAllCaps="true"
            app:icon="@drawable/ic_edit"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:iconTint="@android:color/white"
            android:backgroundTint="?attr/colorPrimary"
            app:cornerRadius="24dp"
            app:layout_constraintTop_toBottomOf="@id/tvOpciones"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- CERRAR SESIÓN (id coincide con tu Kotlin) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/BtnCerrarSesion"
            style="@style/Widget.Material3.Button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:text="@string/Btn_cerrar_sesion"
            android:textAllCaps="true"
            app:icon="@drawable/ic_logout"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:iconTint="@android:color/white"
            android:backgroundTint="?attr/colorSecondary"
            app:cornerRadius="24dp"
            app:layout_constraintTop_toBottomOf="@id/btnEditarPerfil"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Space
            android:layout_width="0dp"
            android:layout_height="24dp"
            app:layout_constraintTop_toBottomOf="@id/BtnCerrarSesion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
